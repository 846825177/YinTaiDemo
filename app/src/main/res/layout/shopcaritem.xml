<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/shopitem_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shopitwem_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shopitem_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asfd" />

                <TextView
                    android:id="@+id/shopitem_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="adsfs" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shopitem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dsaf" />
                <TextView
                    android:id="@+id/shopitem_num"

                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="1sedf" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>