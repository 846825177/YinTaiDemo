<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F1F1F1">

        <ImageView
            android:id="@+id/youhui_img_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/zuojiantou" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的优惠卷"
            android:textSize="15sp" />
    </LinearLayout>
    <!-- 优惠券布局 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:id="@+id/promotion_llyt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/promotion_rlyt_tip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/promotion_llyt"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dip"
                android:background="@drawable/a_shape_line_white"
                android:orientation="vertical"
                android:padding="10dip">


                <TextView
                    android:id="@+id/promotion_tv_tip_title"
                    style="@style/style_13_231f20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text="@string/promotion_explain" />

                <TextView
                    android:id="@+id/TextView2"
                    style="@style/style_12_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/promotion_tv_tip_title"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="@string/promotion_tip" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="vertical">

                <TextView
                    style="@style/style_14_e5004f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/promotion_new_add_for_app" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_below="@id/promotion_llyt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/promotion_et"
                    style="@style/style_12_666666"
                    android:layout_width="230dip"
                    android:layout_height="30dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_rounded_rectangle"
                    android:hint="@string/input_promotion_code"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dip"
                    android:paddingRight="5dip"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/promotion_tv_validate"
                    style="@style/style_14_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/validate_btn_selector"
                    android:gravity="center"
                    android:text="@string/promotion_valid"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/promotion_rlyt_choose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/promotion_tv_left_choose"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/promotion_left_select"
                    android:gravity="center"
                    android:text="@string/promotion_to_use"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/promotion_tv_weishenxiao_choose"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/promotion_middle_normal"
                    android:gravity="center"
                    android:text="@string/promotion_not_to_use"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/promotion_tv_middle_choose"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/promotion_middle_normal"
                    android:gravity="center"
                    android:text="@string/promotion_has_used"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/promotion_tv_guoqi_choose"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="@drawable/promotion_right_normal"
                    android:gravity="center"
                    android:text="@string/promotion_overdue"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- <com.yintaihd.view.MyListView
                 android:id="@+id/promotion_lv"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_marginLeft="10dip"
                 android:layout_marginRight="10dp"
                 android:cacheColorHint="#00000000"
                 android:divider="@null"
                 android:listSelector="#00000000" />

             <TextView
                 android:id="@+id/no_promotion_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="@string/promotion_no"
                 android:textColor="#666666"
                 android:textSize="14sp"
                 android:visibility="gone" />-->
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>