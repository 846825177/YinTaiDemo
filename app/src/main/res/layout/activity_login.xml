<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    tools:context="com.example.administrator.yintaidemo.ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/denglu_img_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/zuojiantou" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="登录"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/login_textview_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="注册"
            android:textColor="#ff00"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h46dip"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_d2d2d2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h90dip"
                        android:layout_marginLeft="@dimen/w36dip"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:background="@drawable/login_uername" />

                        <EditText
                            android:id="@+id/login_name"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/w34dip"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="@string/username_hint"
                            android:textColor="@color/color_999999"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_d5d5d5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h90dip"
                        android:layout_marginLeft="@dimen/w36dip"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:background="@drawable/login_pwd" />

                        <EditText
                            android:id="@+id/login_pass"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/w34dip"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="@string/pwd_hint"
                            android:inputType="textPassword"
                            android:textColor="@color/color_999999"
                            android:textColorHint="@color/color_cccccc"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_d2d2d2" />
                </LinearLayout>

                <Button
                    android:id="@+id/login_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/h76dip"
                    android:layout_marginLeft="@dimen/w32dip"
                    android:layout_marginRight="@dimen/w32dip"
                    android:layout_marginTop="@dimen/h32dip"
                    android:background="@drawable/bg_login_e5004f"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h54dip"
                    android:gravity="center"
                    android:paddingLeft="@dimen/h120dip"
                    android:paddingRight="@dimen/h120dip">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:background="@color/color_d5d5d5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/color_F1F1F1"
                        android:paddingLeft="@dimen/w18dip"
                        android:paddingRight="@dimen/w18dip"
                        android:text="@string/login_other_way" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h42dip"
                    android:paddingLeft="@dimen/h40dip"
                    android:paddingRight="@dimen/h40dip">

                    <LinearLayout
                        android:id="@+id/login_qq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/log_QQ"
                            style="@style/login_share_img"
                            android:src="@drawable/login_qq" />

                        <TextView
                            style="@style/login_other_txt"
                            android:text="@string/login_qq" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_alipay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/login_share_img"
                            android:src="@drawable/login_alipay" />

                        <TextView
                            style="@style/login_other_txt"
                            android:text="@string/login_alipay" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_weibo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            style="@style/login_share_img"
                            android:src="@drawable/login_weibo" />

                        <TextView
                            style="@style/login_other_txt"
                            android:text="@string/login_weibo" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>
